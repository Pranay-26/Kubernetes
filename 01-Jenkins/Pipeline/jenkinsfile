node {     
  stage('Git-Checkout') {
   git 'https://github.com/amitvashisttech/mindtree-devops-30Jan2020.git'
  }
    
 def project_path="01-Jenkins/Code/petclinic"
 
 dir(project_path) {
    
  stage('Maven-Clean') {
   sh label: '', script: 'mvn clean'
  }
    
 stage('Maven-Compile') {
   sh label: '', script: 'mvn compile'
  }
   stage('Maven-Test') {
   sh label: '', script: 'mvn test'
  }
  
   stage('Maven-Package') {
   sh label: '', script: 'mvn package'
  }
  
   stage('Archive-Artifacts') {
   archiveArtifacts 'target/*.war'
  }
  stage('Build-Image') {         
    app = docker.build("pranay05/kubernetes${env.BUILD_ID}")    
  }
  stage('Push-Image') {
      docker.withRegistry('', '24666284-9c6c-4cc7-80ce-ab8809a40372') {

        def customImage = docker.build("pranay05/kubernetes${env.BUILD_ID}")

        /* Push the container to the custom Registry */
        customImage.push()
   }
  }
 }
}
